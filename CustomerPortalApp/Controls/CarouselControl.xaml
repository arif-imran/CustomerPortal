<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CustomerPortalApp.Controls.CarouselControl"
    xmlns:controls="clr-namespace:CustomerPortalApp.Controls;assembly=CustomerPortalApp">
    <StackLayout
        BackgroundColor="{StaticResource BrandLightColor}"
        x:Name="CarouselPanel"
        Orientation="Vertical">
        <cv:CarouselView
            x:Name="ColorsPageCarousel"
            ItemsSource="{Binding ItemSource}">
        </cv:CarouselView>
        <StackLayout
            x:Name="DotsIndicator"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="Center"
            Orientation="Horizontal"
            Margin="0,7,0,15">
        </StackLayout>
    </StackLayout>
    <ContentView.Content>
    </ContentView.Content>
</ContentView>